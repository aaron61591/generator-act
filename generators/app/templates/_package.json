{
  "name": "<%= actName %>",
  "version": "0.0.1",
  "description": "UC Activity <%= actName %>",
  "main": "server/app.js",
  "private": true,
  "scripts": {
    "watch": "scrat server clean; scrat release -wL",
    "start": "scrat server start",
    "release": "scrat release -pd ../"
  },
  "keywords": [
    "activity",
    "<%= actName %>"
  ],
  "author": {
    "name": "<%= gitName %>",
    "email": "<%= gitEmail %>"
  },
  <% if (gitAddress) { %>
  "act": {
    "git": "<%= gitAddress %>"
  },
  <% } %>
  "devDependencies": {
    "express": "^4.13.3",
    "body-parser": "^1.14.1"
  }
}